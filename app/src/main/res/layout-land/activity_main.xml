<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/activity_main"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:padding="0dp"
                                             android:layout_margin="0dp"
                                             tools:context="net.afterday.compas.app.MainActivity"
                                             android:keepScreenOn="true" tools:ignore="MissingDefaultResource">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintTop_toTopOf="parent">

        <net.afterday.compas.app.view.Bar
                android:id="@+id/armorbar"
                app:image="@drawable/bar_armor"
                app:measurement="horizontal"
                app:scale_color="@color/armorBar"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.08"
                android:layout_marginStart="8dp"/>

        <net.afterday.compas.app.view.Bar
                android:id="@+id/devicebar"
                app:image="@drawable/bar_device"
                app:scale_color="@color/deviceBar"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/armorbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.08"
                android:layout_marginStart="8dp"/>

        <net.afterday.compas.app.view.Bar
                android:id="@+id/staminabar"
                app:image="@drawable/bar_stamina"
                app:scale_color="@color/staminaBar"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/devicebar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.08"
                android:layout_marginStart="8dp"
             />

        <net.afterday.compas.app.view.Radbar
                android:id="@+id/radbar"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/staminabar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.18"
                android:layout_marginStart="8dp"
        />

        <net.afterday.compas.app.view.Healthbar
                android:id="@+id/healthbar"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/radbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.18"
                android:layout_marginStart="8dp"
        />

        <android.support.constraint.ConstraintLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/healthbar"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp">

            <View
                    android:id="@+id/log_background"
                    android:background="@drawable/log_h"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/log_list"
                    app:stackFromEnd="true"
                    app:reverseLayout="true"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="18dp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintTop_toTopOf="parent">

        <net.afterday.compas.app.pda.geiger.GeigerFrame
                android:id="@+id/compass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">
        </net.afterday.compas.app.pda.geiger.GeigerFrame>

        <View
                android:id="@+id/clock_background"
                android:background="@drawable/time_h"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
        />

        <net.afterday.compas.app.view.Clock
                android:id="@+id/clock"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
        />

        <View
                android:id="@+id/battery_background"
                app:layout_heightPercent="20.7%"
                app:layout_marginLeftPercent="90.8%"
                app:layout_marginTopPercent="79.0%"
                app:layout_widthPercent="8.5%"
                android:background="@drawable/energy_h"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="invisible"/>

        <net.afterday.compas.app.view.Battery
                android:id="@+id/battery"
                app:layout_widthPercent="9.15625%"
                app:layout_heightPercent="9.87037037%"
                app:layout_marginLeftPercent="90.5%"
                app:layout_marginTopPercent="85.3%"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="invisible"/>

    </android.support.constraint.ConstraintLayout>



